@using Blorc.PatternFly.Components.Navigation
@using Blorc.PatternFly.Components.Icon
@using Blorc.PatternFly.Components.Badge
@using Blorc.PatternFly.Layouts.Split
@using YourShipping.Monitor.Shared

@inherits NavMenuComponent

<Navigation>
    <Items>
        <NavigationItem Link="/">
            <Split IsGutter="true">
                <SplitItem><HomeIcon /></SplitItem>
                <SplitItem IsFilled="true" style="width: 140px;">Home</SplitItem>
            </Split>
        </NavigationItem>
        <NavigationItem Link="/products">
            <Split IsGutter="true">
                <SplitItem><GiftIcon /></SplitItem>
                <SplitItem IsFilled="true" style="width: 140px;">Products</SplitItem>
                @if (ApplicationState.HasAlertsFrom(AlertSource.Products))
                {
                    <SplitItem><Badge IsRead="false">NEW</Badge></SplitItem>
                }
              
            </Split>
        </NavigationItem>
        <NavigationItem Link="/departments">
            <Split IsGutter="true">
                <SplitItem><BuildingIcon /></SplitItem>
                <SplitItem IsFilled="true" style="width: 140px;">Departments</SplitItem>
                @if (ApplicationState.HasAlertsFrom(AlertSource.Departments))
                {
                    <SplitItem><Badge IsRead="false">NEW</Badge></SplitItem>
                }
            </Split>
        </NavigationItem>
    </Items>
</Navigation>
